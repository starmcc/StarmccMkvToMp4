<StackPane prefHeight="640.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.starmcc.mkv.to.mp4.controller.MainController">
    <VBox>
        <children>
            <MenuBar VBox.vgrow="NEVER">
                <menus>
                    <Menu mnemonicParsing="false" text="帮助">
                        <items>
                            <MenuItem mnemonicParsing="false" onAction="#aboutAction" text="关于我.." />
                            <MenuItem mnemonicParsing="false" onAction="#updateAction" text="更新工具" />
                        </items>
                    </Menu>
                </menus>
            </MenuBar>
            <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
                <children>
                    <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
                        <children>
                            <GridPane hgap="3.0" vgap="3.0">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" />
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                </rowConstraints>
                                <children>
                                    <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#searchInputVideoPathEvent" text="浏览..." GridPane.columnIndex="6" />
                                    <TextField fx:id="inputVideoPathText" editable="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.columnSpan="5" />
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="视频文件：" GridPane.halignment="RIGHT" />
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="输出目录：" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                                    <TextField fx:id="outputFolderPathText" editable="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.columnSpan="5" GridPane.rowIndex="1" />
                                    <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#searchOutputFolderPathEvent" text="浏览..." GridPane.columnIndex="6" GridPane.rowIndex="1" />
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="输出轨道：" GridPane.halignment="RIGHT" GridPane.rowIndex="7" />
                                    <ListView fx:id="outputList" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.columnSpan="6" GridPane.rowIndex="7" GridPane.rowSpan="11" />
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="输出设置：" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
                                    <RadioButton mnemonicParsing="false" selected="true" text="默认转码（直接使用原视频编码，可能会导致音频不同步[复制流-快]）" userData="0" GridPane.columnIndex="1" GridPane.columnSpan="5" GridPane.rowIndex="2">
                                        <toggleGroup>
                                            <ToggleGroup fx:id="outputCodeGroup" />
                                        </toggleGroup>
                                    </RadioButton>
                                    <RadioButton mnemonicParsing="false" text="重新编码（使用x264 + aac[慢]）" toggleGroup="$outputCodeGroup" userData="1" GridPane.columnIndex="1" GridPane.columnSpan="5" GridPane.rowIndex="3" />
                                    <RadioButton mnemonicParsing="false" text="强制转码（音频-AC3，部分非主流编码可以尝试[中]）" toggleGroup="$outputCodeGroup" userData="2" GridPane.columnIndex="1" GridPane.columnSpan="5" GridPane.rowIndex="4" />
                                    <RadioButton mnemonicParsing="false" text="自定义转码(进阶 例：【x264】【acc】【mov_text】等同于重新编码)" toggleGroup="$outputCodeGroup" userData="3" GridPane.columnIndex="1" GridPane.columnSpan="5" GridPane.rowIndex="5" />
                                    <Button fx:id="exportVideoBtn" disable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#exportVideoEvent" text="导出视频" GridPane.columnIndex="5" GridPane.columnSpan="2" GridPane.rowIndex="18" />
                                    <Button fx:id="exportSrtBtn" disable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#exportSrtEvent" text="导出字幕文件-SRT" GridPane.columnIndex="3" GridPane.columnSpan="2" GridPane.rowIndex="18" />
                                    <TextField fx:id="videoCodeText" disable="true" maxHeight="1.7976931348623157E308" maxWidth="100.0" promptText="视频编码" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="6" />
                                    <TextField fx:id="audioCodeText" disable="true" maxHeight="1.7976931348623157E308" maxWidth="100.0" promptText="音频编码" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowIndex="6" />
                                    <TextField fx:id="subCodeText" disable="true" maxHeight="1.7976931348623157E308" maxWidth="100.0" promptText="字幕编码" GridPane.columnIndex="3" GridPane.rowIndex="6" />
                           <CheckBox fx:id="consoleCheckBox" mnemonicParsing="false" selected="true" text="显示控制台" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="18" />
                                </children>
                                <padding>
                                    <Insets bottom="5.0" left="10.0" right="20.0" top="5.0" />
                                </padding>
                            </GridPane>
                        </children>
                    </VBox>
                </children>
            </AnchorPane>
        </children>
    </VBox>
</StackPane>
